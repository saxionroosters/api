{
  "_meta": {
    "sources": [
      "loopback/common/models",
      "loopback/server/models",
      "../common/models",
      "./models"
    ],
    "mixins": [
      "loopback/common/mixins",
      "loopback/server/mixins",
      "../common/mixins",
      "./mixins"
    ]
  },
  "event": {
    "dataSource": "database",
    "public": true
  },
  "device": {
    "dataSource": "database",
    "public": true,
    "options": {
      "remoting": {
        "sharedMethods": {
          "*": false,
          "create": true,
          "register": true,
          "list": true
        }
      }
    }
  },
  "user": {
    "dataSource": "database",
    "public": true,
    "options": {
      "remoting": {
        "sharedMethods": {
          "*": false,
          "authenticate": true,
          "sendCode": true,
          "validate": true
        }
      }
    }
  },
  "schedule": {
    "dataSource": "database",
    "public": true,
    "options": {
      "remoting": {
        "sharedMethods": {
          "*": false,
          "create": true,
          "deleteById": true,
          "list": true
        }
      }
    }
  }
}
